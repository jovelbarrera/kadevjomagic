<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners
                android:radius="5dp" />
            <gradient
                android:angle="270"
                android:startColor="#844D20"
                android:endColor="#AA7543" />
            <stroke
                android:width="2dp"
                android:color="#FFC75A" />
        </shape>
   </item>

  <item android:id="@android:id/progress"
        android:top="2dp"
        android:left="2dp"
        android:right="2dp"
        android:bottom="2dp">
    <clip>
        <shape>
            <corners
                android:radius="4dp" />
            <gradient
                android:angle="270"
                android:startColor="#55B4B8"
                android:endColor="#0D5677" />
        </shape>
    </clip>
    </item>
</layer-list>